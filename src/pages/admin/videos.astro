---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Gerenciar Vídeos">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Gerenciar Vídeos</h1>
          <p class="text-gray-600">Gerencie todos os vídeos do YouTube</p>
        </div>
        <button id="new-video-btn" class="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Novo Vídeo
        </button>
      </div>
    </div>

    <!-- Video Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-red-100 text-red-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Total Vídeos</p>
            <p class="text-2xl font-semibold text-gray-900">28</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-green-100 text-green-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Visualizações</p>
            <p class="text-2xl font-semibold text-gray-900">125K</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-blue-100 text-blue-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Tempo Total</p>
            <p class="text-2xl font-semibold text-gray-900">8h 45m</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-purple-100 text-purple-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Curtidas</p>
            <p class="text-2xl font-semibold text-gray-900">3.2K</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Videos List -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex justify-between items-center">
          <h2 class="text-lg font-semibold text-gray-900">Vídeos do YouTube</h2>
          <div class="flex space-x-2">
            <select class="px-3 py-2 border border-gray-300 rounded-md text-sm">
              <option>Todos os Status</option>
              <option>Publicado</option>
              <option>Não Listado</option>
              <option>Privado</option>
            </select>
            <input type="text" placeholder="Buscar vídeos..." class="px-3 py-2 border border-gray-300 rounded-md text-sm">
          </div>
        </div>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vídeo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Visualizações</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <img class="h-16 w-24 rounded-lg object-cover" src="https://images.pexels.com/photos/8386440/pexels-photo-8386440.jpeg?auto=compress&cs=tinysrgb&w=200" alt="">
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">AI Tools for Content Creation</div>
                    <div class="text-sm text-gray-500">15:22 • AI & Technology</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Publicado
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">15/01/2024</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">31K</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <button class="text-blue-600 hover:text-blue-900">Editar</button>
                  <button class="text-green-600 hover:text-green-900">Ver</button>
                  <button class="text-red-600 hover:text-red-900">Excluir</button>
                </div>
              </td>
            </tr>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <img class="h-16 w-24 rounded-lg object-cover" src="https://images.pexels.com/photos/270637/pexels-photo-270637.jpeg?auto=compress&cs=tinysrgb&w=200" alt="">
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">SEO Best Practices for 2024</div>
                    <div class="text-sm text-gray-500">18:45 • SEO</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Publicado
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">10/01/2024</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">23K</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <div class="flex space-x-2">
                  <button class="text-blue-600 hover:text-blue-900">Editar</button>
                  <button class="text-green-600 hover:text-green-900">Ver</button>
                  <button class="text-red-600 hover:text-red-900">Excluir</button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <!-- New Video Modal -->
    <div id="new-video-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
      <div class="bg-white rounded-lg max-w-2xl w-full mx-4 max-h-[90vh] overflow-y-auto">
        <div class="p-6 border-b border-gray-200">
          <div class="flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">Novo Vídeo</h3>
            <button id="close-video-modal" class="text-gray-400 hover:text-gray-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <form id="new-video-form" class="p-6 space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Título do Vídeo</label>
            <input type="text" id="video-title" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" required>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">ID do YouTube</label>
            <input type="text" id="youtube-id" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500" placeholder="dQw4w9WgXcQ" required>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Descrição</label>
            <textarea id="video-description" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Duração</label>
              <input type="text" id="video-duration" placeholder="15:22" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Thumbnail URL</label>
              <input type="url" id="video-thumbnail" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>
          </div>
          
          <div class="flex items-center space-x-4">
            <label class="flex items-center">
              <input type="checkbox" id="video-published" class="mr-2">
              <span class="text-sm text-gray-700">Publicado</span>
            </label>
            <label class="flex items-center">
              <input type="checkbox" id="video-featured" class="mr-2">
              <span class="text-sm text-gray-700">Destaque</span>
            </label>
          </div>
          
          <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
            <button type="button" id="cancel-video" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-md hover:bg-gray-400">
              Cancelar
            </button>
            <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-md hover:bg-red-700">
              Salvar Vídeo
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      loadVideos();
      
      const newVideoBtn = document.getElementById('new-video-btn');
      const newVideoModal = document.getElementById('new-video-modal');
      const closeVideoModal = document.getElementById('close-video-modal');
      const cancelVideo = document.getElementById('cancel-video');
      const newVideoForm = document.getElementById('new-video-form');
      let editingVideoId = null;

      // Open modal
      newVideoBtn?.addEventListener('click', () => {
        editingVideoId = null;
        newVideoForm.reset();
        document.querySelector('#new-video-modal h3').textContent = 'Novo Vídeo';
        newVideoModal?.classList.remove('hidden');
      });

      // Close modal
      [closeVideoModal, cancelVideo].forEach(btn => {
        btn?.addEventListener('click', () => {
          newVideoModal?.classList.add('hidden');
          editingVideoId = null;
        });
      });

      // Form submission
      newVideoForm?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = {
          title: document.getElementById('video-title').value,
          youtubeId: document.getElementById('youtube-id').value,
          description: document.getElementById('video-description').value,
          duration: document.getElementById('video-duration').value,
          thumbnail: document.getElementById('video-thumbnail').value,
          published: document.getElementById('video-published').checked,
          featured: document.getElementById('video-featured').checked
        };
        
        if (editingVideoId) {
          formData.id = editingVideoId;
        }
        
        try {
          const response = await fetch('/api/admin/videos', {
            method: editingVideoId ? 'PUT' : 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
          });
          
          if (response.ok) {
            alert(editingVideoId ? 'Vídeo atualizado com sucesso!' : 'Vídeo criado com sucesso!');
            newVideoModal?.classList.add('hidden');
            loadVideos();
            newVideoForm.reset();
            editingVideoId = null;
          } else {
            const error = await response.json();
            alert('Erro ao salvar vídeo: ' + (error.error || 'Erro desconhecido'));
          }
        } catch (error) {
          console.error('Error saving video:', error);
          alert('Erro ao salvar vídeo. Tente novamente.');
        }
      });

      // Close modal on backdrop click
      newVideoModal?.addEventListener('click', (e) => {
        if (e.target === newVideoModal) {
          newVideoModal.classList.add('hidden');
          editingVideoId = null;
        }
      });
      
      // Global functions for edit and delete
      window.editVideo = async (videoId) => {
        try {
          const response = await fetch(`/api/admin/videos?id=${videoId}`);
          if (response.ok) {
            const data = await response.json();
            const video = data.videos ? data.videos.find(v => v.id === videoId) : data;
            
            if (video) {
              document.getElementById('video-title').value = video.title || '';
              document.getElementById('youtube-id').value = video.youtubeId || '';
              document.getElementById('video-description').value = video.description || '';
              document.getElementById('video-duration').value = video.duration || '';
              document.getElementById('video-thumbnail').value = video.thumbnail || '';
              document.getElementById('video-published').checked = video.published || false;
              document.getElementById('video-featured').checked = video.featured || false;
              
              editingVideoId = videoId;
              document.querySelector('#new-video-modal h3').textContent = 'Editar Vídeo';
              newVideoModal?.classList.remove('hidden');
            } else {
              throw new Error('Video not found');
            }
          }
        } catch (error) {
          console.error('Error loading video:', error);
          showNotification('Erro ao carregar vídeo para edição.', 'error');
        }
      };
      
      window.deleteVideo = async (videoId) => {
        if (!confirm('Tem certeza que deseja excluir este vídeo?')) return;
        
        try {
          const response = await fetch('/api/admin/videos', {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ id: videoId })
          });
          
          if (response.ok) {
            showNotification('Vídeo excluído com sucesso!', 'success');
            loadVideos();
          } else {
            showNotification('Erro ao excluir vídeo.', 'error');
          }
        } catch (error) {
          console.error('Error deleting video:', error);
          showNotification('Erro ao excluir vídeo.', 'error');
        }
      };
      
      function showNotification(message, type = 'info') {
        // Remove existing notifications
        const existingNotification = document.querySelector('.notification');
        if (existingNotification) {
          existingNotification.remove();
        }
        
        const notification = document.createElement('div');
        notification.className = `notification fixed top-4 right-4 px-6 py-4 rounded-lg shadow-lg z-50 ${
          type === 'success' ? 'bg-green-500 text-white' : 
          type === 'error' ? 'bg-red-500 text-white' : 
          'bg-blue-500 text-white'
        }`;
        notification.textContent = message;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
          notification.remove();
        }, 5000);
      }
    });
    
    async function loadVideos() {
      try {
        const response = await fetch('/api/admin/videos');
        if (response.ok) {
          const data = await response.json();
          updateVideosTable(data.videos);
        }
      } catch (error) {
        console.error('Error loading videos:', error);
      }
    }
    
    function updateVideosTable(videos) {
      const tbody = document.querySelector('tbody');
      if (!tbody) return;
      
      tbody.innerHTML = '';
      
      videos.forEach(video => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <img class="h-16 w-24 rounded-lg object-cover" src="${video.thumbnail || `https://img.youtube.com/vi/${video.youtubeId}/mqdefault.jpg`}" alt="">
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">${video.title}</div>
                <div class="text-sm text-gray-500">${video.duration || 'N/A'} • YouTube</div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${video.published ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}">
              ${video.published ? 'Publicado' : 'Não Publicado'}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${new Date(video.createdAt).toLocaleDateString('pt-BR')}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${video.views || 0}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <div class="flex space-x-2">
              <button onclick="editVideo('${video.id}')" class="text-blue-600 hover:text-blue-900">Editar</button>
              <button onclick="window.open('https://youtube.com/watch?v=${video.youtubeId}', '_blank')" class="text-green-600 hover:text-green-900">Ver</button>
              <button onclick="deleteVideo('${video.id}')" class="text-red-600 hover:text-red-900">Excluir</button>
            </div>
          </td>
        `;
        tbody.appendChild(row);
      });
    }
  </script>
</AdminLayout>
---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Admin Dashboard">
  <div class="admin-dashboard">
    <!-- Dashboard Header -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Dashboard Administrativo</h1>
      <p class="text-gray-600">Gerencie todo o conteúdo e configurações do seu site</p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8" id="stats-container">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-blue-100 text-blue-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Membros Ativos</p>
            <p class="text-2xl font-semibold text-gray-900" id="members-count">-</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-green-100 text-green-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Posts do Blog</p>
            <p class="text-2xl font-semibold text-gray-900" id="posts-count">-</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-red-100 text-red-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Vídeos YouTube</p>
            <p class="text-2xl font-semibold text-gray-900" id="videos-count">-</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-purple-100 text-purple-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">Visitantes/Mês</p>
            <p class="text-2xl font-semibold text-gray-900" id="visitors-count">12.5K</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Recent Activity -->
      <div class="bg-white rounded-lg shadow-md p-6 lg:col-span-2">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Atividade Recente</h3>
        <div id="recent-activity" class="space-y-3">
          <div class="flex items-center p-3 bg-gray-50 rounded-lg">
            <div class="animate-pulse bg-gray-300 rounded w-full h-4"></div>
          </div>
          <div class="flex items-center p-3 bg-gray-50 rounded-lg">
            <div class="animate-pulse bg-gray-300 rounded w-3/4 h-4"></div>
          </div>
          <div class="flex items-center p-3 bg-gray-50 rounded-lg">
            <div class="animate-pulse bg-gray-300 rounded w-1/2 h-4"></div>
          </div>
        </div>
        <div class="mt-4">
          <a href="/admin/analytics" class="text-blue-600 hover:text-blue-800 text-sm font-medium">Ver todas as atividades →</a>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Gerenciar Conteúdo</h3>
        <div class="space-y-3">
          <a href="/admin/blog" class="flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Gerenciar Blog
          </a>
          <a href="/admin/videos" class="flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
            Gerenciar Vídeos
          </a>
          <a href="/admin/pages" class="flex items-center text-blue-600 hover:text-blue-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Gerenciar Páginas
          </a>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Configurações</h3>
        <div class="space-y-3">
          <a href="/admin/seo" class="flex items-center text-green-600 hover:text-green-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            Configurações SEO
          </a>
          <a href="/admin/analytics" class="flex items-center text-green-600 hover:text-green-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Analytics
          </a>
          <a href="/admin/translations" class="flex items-center text-green-600 hover:text-green-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
            Traduções
          </a>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Membros & Vendas</h3>
        <div class="space-y-3">
          <a href="/admin/members" class="flex items-center text-purple-600 hover:text-purple-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            Área de Membros
          </a>
          <a href="/admin/store" class="flex items-center text-purple-600 hover:text-purple-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
            </svg>
            Loja Virtual
          </a>
          <a href="/admin/settings" class="flex items-center text-purple-600 hover:text-purple-800">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Configurações Gerais
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      await loadDashboardData();
    });

    async function loadDashboardData() {
      try {
        const response = await fetch('/api/admin/dashboard');
        if (!response.ok) {
          throw new Error('Failed to load dashboard data');
        }

        const data = await response.json();
        
        // Update stats
        if (document.getElementById('members-count')) {
          document.getElementById('members-count').textContent = data.members.total.toLocaleString();
        }
        if (document.getElementById('posts-count')) {
          document.getElementById('posts-count').textContent = data.posts.total.toLocaleString();
        }
        if (document.getElementById('videos-count')) {
          document.getElementById('videos-count').textContent = data.content.videos.toLocaleString();
        }
        
        // Update recent activity
        updateRecentActivity(data.recent);
        
      } catch (error) {
        console.error('Error loading dashboard data:', error);
        // Show error state
        if (document.getElementById('members-count')) {
          document.getElementById('members-count').textContent = 'Error';
        }
        if (document.getElementById('posts-count')) {
          document.getElementById('posts-count').textContent = 'Error';
        }
        if (document.getElementById('videos-count')) {
          document.getElementById('videos-count').textContent = 'Error';
        }
      }
    }

    function updateRecentActivity(recentData) {
      const container = document.getElementById('recent-activity');
      container.innerHTML = '';

      // Add recent posts
      recentData.posts.slice(0, 3).forEach(post => {
        const item = document.createElement('div');
        item.className = 'flex items-center p-3 bg-gray-50 rounded-lg';
        item.innerHTML = `
          <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900">Novo post: ${post.title}</p>
            <p class="text-xs text-gray-500">${new Date(post.createdAt).toLocaleDateString()}</p>
          </div>
        `;
        container.appendChild(item);
      });

      if (recentData.posts.length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-sm">Nenhuma atividade recente</p>';
      }
    }
  </script>
</AdminLayout>
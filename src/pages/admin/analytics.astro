---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Analytics">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Analytics & Tracking</h1>
      <p class="text-gray-600">Configure e monitore todas as ferramentas de analytics</p>
    </div>

    <!-- Analytics Configuration -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Google Analytics -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Google Analytics</h3>
        </div>
        <form id="ga-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">GA4 Measurement ID</label>
            <input type="text" id="ga-id" placeholder="G-XXXXXXXXXX" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="ga-enabled" class="mr-2">
            <label for="ga-enabled" class="text-sm text-gray-700">Ativar Google Analytics</label>
          </div>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
            Salvar GA4
          </button>
        </form>
      </div>

      <!-- Google Tag Manager -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Google Tag Manager</h3>
        </div>
        <form id="gtm-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">GTM Container ID</label>
            <input type="text" id="gtm-id" placeholder="GTM-XXXXXXX" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="gtm-enabled" class="mr-2">
            <label for="gtm-enabled" class="text-sm text-gray-700">Ativar Google Tag Manager</label>
          </div>
          <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">
            Salvar GTM
          </button>
        </form>
      </div>

      <!-- Hotjar -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Hotjar</h3>
        </div>
        <form id="hotjar-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Hotjar Site ID</label>
            <input type="text" id="hotjar-id" placeholder="XXXXXXX" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500">
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="hotjar-enabled" class="mr-2">
            <label for="hotjar-enabled" class="text-sm text-gray-700">Ativar Hotjar</label>
          </div>
          <button type="submit" class="bg-orange-600 text-white px-4 py-2 rounded-md hover:bg-orange-700">
            Salvar Hotjar
          </button>
        </form>
      </div>

      <!-- Microsoft Clarity -->
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm3.5 6L12 10.5 8.5 8 12 5.5 15.5 8zM8.5 16L12 13.5 15.5 16 12 18.5 8.5 16z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900">Microsoft Clarity</h3>
        </div>
        <form id="clarity-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Clarity Project ID</label>
            <input type="text" id="clarity-id" placeholder="XXXXXXXX" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
          </div>
          <div class="flex items-center">
            <input type="checkbox" id="clarity-enabled" class="mr-2">
            <label for="clarity-enabled" class="text-sm text-gray-700">Ativar Microsoft Clarity</label>
          </div>
          <button type="submit" class="bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700">
            Salvar Clarity
          </button>
        </form>
      </div>
    </div>

    <!-- Analytics Dashboard -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Dashboard de Analytics</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-4 bg-blue-50 rounded-lg">
          <div class="text-2xl font-bold text-blue-600">12,543</div>
          <div class="text-sm text-gray-600">Visitantes (30 dias)</div>
        </div>
        <div class="text-center p-4 bg-green-50 rounded-lg">
          <div class="text-2xl font-bold text-green-600">8,234</div>
          <div class="text-sm text-gray-600">Sessões (30 dias)</div>
        </div>
        <div class="text-center p-4 bg-yellow-50 rounded-lg">
          <div class="text-2xl font-bold text-yellow-600">2:34</div>
          <div class="text-sm text-gray-600">Tempo Médio</div>
        </div>
        <div class="text-center p-4 bg-red-50 rounded-lg">
          <div class="text-2xl font-bold text-red-600">34.5%</div>
          <div class="text-sm text-gray-600">Taxa de Rejeição</div>
        </div>
      </div>
    </div>

    <!-- Custom Events -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Eventos Personalizados</h2>
      <div id="custom-events-container">
        <div class="custom-event-item flex items-center space-x-4 mb-4 p-4 border border-gray-200 rounded-lg">
          <input type="text" placeholder="Nome do evento" class="flex-1 px-3 py-2 border border-gray-300 rounded-md">
          <input type="text" placeholder="Categoria" class="flex-1 px-3 py-2 border border-gray-300 rounded-md">
          <input type="text" placeholder="Ação" class="flex-1 px-3 py-2 border border-gray-300 rounded-md">
          <button type="button" class="remove-event bg-red-500 text-white px-3 py-2 rounded-md hover:bg-red-600">
            Remover
          </button>
        </div>
      </div>
      <button type="button" id="add-custom-event" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 mb-4">
        Adicionar Evento
      </button>
      <div>
        <button type="button" id="save-custom-events" class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">
          Salvar Eventos
        </button>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      loadAnalyticsSettings();
      
      // Form submissions
      document.getElementById('ga-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        await saveAnalyticsSettings('ga');
      });

      document.getElementById('gtm-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        await saveAnalyticsSettings('gtm');
      });

      document.getElementById('hotjar-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        await saveAnalyticsSettings('hotjar');
      });

      document.getElementById('clarity-form')?.addEventListener('submit', async (e) => {
        e.preventDefault();
        await saveAnalyticsSettings('clarity');
      });

      // Custom events functionality
      document.getElementById('add-custom-event')?.addEventListener('click', () => {
        const container = document.getElementById('custom-events-container');
        const newEvent = document.createElement('div');
        newEvent.className = 'custom-event-item flex items-center space-x-4 mb-4 p-4 border border-gray-200 rounded-lg';
        newEvent.innerHTML = `
          <input type="text" placeholder="Nome do evento" class="flex-1 px-3 py-2 border border-gray-300 rounded-md">
          <input type="text" placeholder="Categoria" class="flex-1 px-3 py-2 border border-gray-300 rounded-md">
          <input type="text" placeholder="Ação" class="flex-1 px-3 py-2 border border-gray-300 rounded-md">
          <button type="button" class="remove-event bg-red-500 text-white px-3 py-2 rounded-md hover:bg-red-600">
            Remover
          </button>
        `;
        container?.appendChild(newEvent);
      });

      document.addEventListener('click', (e) => {
        if (e.target?.classList.contains('remove-event')) {
          e.target.closest('.custom-event-item')?.remove();
        }
      });

      document.getElementById('save-custom-events')?.addEventListener('click', () => {
        alert('Eventos personalizados salvos com sucesso!');
      });
      
      async function loadAnalyticsSettings() {
        try {
          const response = await fetch('/api/seo/settings');
          if (response.ok) {
            const settings = await response.json();
            
            if (settings) {
              // Google Analytics
              if (settings.googleAnalytics) {
                document.getElementById('ga-id').value = settings.googleAnalytics;
              }
              if (settings.gaEnabled !== undefined) {
                document.getElementById('ga-enabled').checked = settings.gaEnabled;
              }
              
              // Google Tag Manager
              if (settings.googleTagManager) {
                document.getElementById('gtm-id').value = settings.googleTagManager;
              }
              if (settings.gtmEnabled !== undefined) {
                document.getElementById('gtm-enabled').checked = settings.gtmEnabled;
              }
              
              // Hotjar
              if (settings.hotjarId) {
                document.getElementById('hotjar-id').value = settings.hotjarId;
              }
              if (settings.hotjarEnabled !== undefined) {
                document.getElementById('hotjar-enabled').checked = settings.hotjarEnabled;
              }
              
              // Microsoft Clarity
              if (settings.clarityId) {
                document.getElementById('clarity-id').value = settings.clarityId;
              }
              if (settings.clarityEnabled !== undefined) {
                document.getElementById('clarity-enabled').checked = settings.clarityEnabled;
              }
            }
          }
        } catch (error) {
          console.error('Error loading analytics settings:', error);
          showNotification('Erro ao carregar configurações', 'error');
        }
      }
      
      async function saveAnalyticsSettings(type) {
        try {
          let data = {};
          
          switch (type) {
            case 'ga':
              data = {
                googleAnalytics: document.getElementById('ga-id').value,
                gaEnabled: document.getElementById('ga-enabled').checked
              };
              break;
            case 'gtm':
              data = {
                googleTagManager: document.getElementById('gtm-id').value,
                gtmEnabled: document.getElementById('gtm-enabled').checked
              };
              break;
            case 'hotjar':
              data = {
                hotjarId: document.getElementById('hotjar-id').value,
                hotjarEnabled: document.getElementById('hotjar-enabled').checked
              };
              break;
            case 'clarity':
              data = {
                clarityId: document.getElementById('clarity-id').value,
                clarityEnabled: document.getElementById('clarity-enabled').checked
              };
              break;
          }
          
          const response = await fetch('/api/seo/settings', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });
          
          if (response.ok) {
            showNotification('Configurações salvas com sucesso!', 'success');
          } else {
            const error = await response.json();
            showNotification('Erro ao salvar: ' + (error.error || 'Erro desconhecido'), 'error');
          }
        } catch (error) {
          console.error('Error saving analytics settings:', error);
          showNotification('Erro ao salvar configurações', 'error');
        }
      }
      
      function showNotification(message, type = 'info') {
        // Remove existing notifications
        const existingNotification = document.querySelector('.notification');
        if (existingNotification) {
          existingNotification.remove();
        }
        
        const notification = document.createElement('div');
        notification.className = `notification fixed top-4 right-4 px-6 py-4 rounded-lg shadow-lg z-50 ${
          type === 'success' ? 'bg-green-500 text-white' : 
          type === 'error' ? 'bg-red-500 text-white' : 
          'bg-blue-500 text-white'
        }`;
        notification.textContent = message;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
          notification.remove();
        }, 5000);
      }
    });
  </script>
</AdminLayout>
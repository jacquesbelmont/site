---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { prisma } from '../../lib/database';

const lang = 'en';

// Fetch products from database
const [personalProducts, marketplaceProducts] = await Promise.all([
  prisma.product.findMany({
    where: { 
      active: true,
      OR: [
        { category: 'TEMPLATES' },
        { category: 'COURSES' },
        { category: 'CONSULTATION' },
        { category: 'EBOOKS' }
      ]
    },
    orderBy: [
      { featured: 'desc' },
      { createdAt: 'desc' }
    ]
  }),
  prisma.product.findMany({
    where: { 
      active: true,
      OR: [
        { category: 'SOFTWARE' },
        { category: 'MARKETPLACE' }
      ]
    },
    orderBy: [
      { featured: 'desc' },
      { createdAt: 'desc' }
    ]
  })
]);

const featuredProducts = await prisma.product.findMany({
  where: { active: true, featured: true },
  take: 3
});
---

<BaseLayout 
  title="Digital Store - Jacques Belmont"
  description="Premium digital products, courses, templates, and consulting services for digital marketing professionals."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-green-50 via-white to-blue-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="flex items-center justify-center mb-6">
        <svg class="w-12 h-12 text-green-600 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
        </svg>
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-gray-900">
          Digital Store
        </h1>
      </div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
        Premium digital products, courses, and services to accelerate your digital marketing success
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="#personal-products"
          class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-green-600 to-blue-600 text-white font-semibold rounded-lg hover:from-green-700 hover:to-blue-700 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          View Products
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <a 
          href="#marketplace"
          class="inline-flex items-center px-8 py-4 text-gray-700 bg-white border-2 border-gray-300 rounded-lg hover:border-green-500 hover:text-green-600 transform hover:-translate-y-1 transition-all duration-300 shadow-md hover:shadow-lg"
        >
          Marketplace
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  {featuredProducts.length > 0 && (
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-display font-bold text-gray-900 mb-4">Featured Products</h2>
        <p class="text-gray-600">Our most popular and recommended products</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {featuredProducts.map((product) => (
          <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden border border-gray-100">
            <div class="relative">
              <img 
                src={product.image || 'https://images.pexels.com/photos/270637/pexels-photo-270637.jpeg?auto=compress&cs=tinysrgb&w=800'}
                alt={product.name}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
              <div class="absolute top-4 right-4">
                <span class="bg-gradient-to-r from-green-600 to-blue-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                  Featured
                </span>
              </div>
            </div>
            
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">
                  {product.category.toLowerCase().replace('_', ' ')}
                </span>
                <span class="text-2xl font-bold text-gray-900">
                  ${product.price}
                </span>
              </div>
              
              <h3 class="text-xl font-display font-semibold text-gray-900 mb-3">
                {product.name}
              </h3>
              
              <p class="text-gray-600 mb-6">
                {product.description}
              </p>
              
              <button class="w-full bg-gradient-to-r from-green-600 to-blue-600 text-white py-3 rounded-lg font-semibold hover:from-green-700 hover:to-blue-700 transition-all duration-300">
                Buy Now
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  )}

  <!-- Personal Products Section -->
  <section id="personal-products" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-display font-bold text-gray-900 mb-4">Jacques Belmont Products</h2>
        <p class="text-gray-600">Premium digital marketing resources created by Jacques Belmont</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {personalProducts.map((product) => (
          <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden">
            <div class="aspect-video overflow-hidden">
              <img 
                src={product.image || 'https://images.pexels.com/photos/270637/pexels-photo-270637.jpeg?auto=compress&cs=tinysrgb&w=800'}
                alt={product.name}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            </div>
            
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-full">
                  {product.category.toLowerCase().replace('_', ' ')}
                </span>
                <span class="text-xl font-bold text-gray-900">
                  ${product.price}
                </span>
              </div>
              
              <h3 class="text-lg font-display font-semibold text-gray-900 mb-3">
                {product.name}
              </h3>
              
              <p class="text-gray-600 mb-4">
                {product.description}
              </p>
              
              <div class="flex space-x-2">
                <button class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-blue-700 transition-colors">
                  Buy Now
                </button>
                <button class="px-4 py-2 text-blue-600 border border-blue-600 rounded-lg hover:bg-blue-50 transition-colors">
                  Details
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Marketplace Section -->
  <section id="marketplace" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-display font-bold text-gray-900 mb-4">Marketplace</h2>
        <p class="text-gray-600">Software, tools, and enterprise solutions</p>
      </div>
      
      {marketplaceProducts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {marketplaceProducts.map((product) => (
            <div class="bg-white rounded-2xl shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden border-2 border-purple-100">
              <div class="aspect-video overflow-hidden">
                <img 
                  src={product.image || 'https://images.pexels.com/photos/8386440/pexels-photo-8386440.jpeg?auto=compress&cs=tinysrgb&w=800'}
                  alt={product.name}
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
              
              <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                  <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm font-medium rounded-full">
                    {product.category.toLowerCase().replace('_', ' ')}
                  </span>
                  <span class="text-xl font-bold text-gray-900">
                    ${product.price}
                  </span>
                </div>
                
                <h3 class="text-lg font-display font-semibold text-gray-900 mb-3">
                  {product.name}
                </h3>
                
                <p class="text-gray-600 mb-4">
                  {product.description}
                </p>
                
                <div class="flex space-x-2">
                  <button class="flex-1 bg-purple-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-purple-700 transition-colors">
                    Get Access
                  </button>
                  <button class="px-4 py-2 text-purple-600 border border-purple-600 rounded-lg hover:bg-purple-50 transition-colors">
                    Learn More
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="w-24 h-24 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-display font-semibold text-gray-900 mb-4">Coming Soon</h3>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">
            We're working on bringing you amazing software and enterprise solutions. Stay tuned!
          </p>
          <button class="bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
            Notify Me
          </button>
        </div>
      )}
    </div>
  </section>

  <!-- Categories Overview -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-display font-bold text-gray-900 mb-4">Product Categories</h2>
        <p class="text-gray-600">Explore our different product categories</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Templates</h3>
          <p class="text-gray-600 text-sm">Ready-to-use templates and resources</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Courses</h3>
          <p class="text-gray-600 text-sm">Comprehensive video courses</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Consultation</h3>
          <p class="text-gray-600 text-sm">Personal strategy sessions</p>
        </div>
        
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all duration-300 text-center">
          <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Software</h3>
          <p class="text-gray-600 text-sm">Professional tools and software</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
---
// Blog Editor Component with Rich Text Editor
---

<div id="blog-editor-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl max-w-6xl w-full max-h-[95vh] overflow-hidden shadow-2xl">
    <!-- Modal Header -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200 bg-gray-50">
      <h3 class="text-xl font-semibold text-gray-900" id="modal-title">Novo Post</h3>
      <button id="close-editor-modal" class="text-gray-400 hover:text-gray-600 p-2 rounded-lg hover:bg-gray-100 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Modal Content -->
    <div class="flex h-[calc(95vh-80px)]">
      <!-- Main Content Area -->
      <div class="flex-1 overflow-y-auto">
        <form id="blog-post-form" class="p-6 space-y-6">
          <!-- Title and Slug -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Título do Post *
              </label>
              <input
                type="text"
                id="post-title"
                name="title"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="Digite o título do post..."
              />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Slug (URL)
              </label>
              <input
                type="text"
                id="post-slug"
                name="slug"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                placeholder="url-amigavel-do-post"
              />
              <p class="text-xs text-gray-500 mt-1">Deixe em branco para gerar automaticamente</p>
            </div>
          </div>
          
          <!-- Excerpt -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Resumo/Excerpt
            </label>
            <textarea
              id="post-excerpt"
              name="excerpt"
              rows="3"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
              placeholder="Breve descrição do post para SEO e listagens..."
            ></textarea>
          </div>
          
          <!-- Rich Text Editor Container -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Conteúdo *
            </label>
            <div class="border border-gray-300 rounded-lg overflow-hidden">
              <!-- Toolbar -->
              <div class="bg-gray-50 border-b border-gray-200 p-3 flex flex-wrap gap-2">
                <button type="button" class="editor-btn" data-command="bold" title="Negrito">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 4h8a4 4 0 014 4 4 4 0 01-4 4H6z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12h9a4 4 0 014 4 4 4 0 01-4 4H6z"></path>
                  </svg>
                </button>
                <button type="button" class="editor-btn" data-command="italic" title="Itálico">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 4l4 16"></path>
                  </svg>
                </button>
                <button type="button" class="editor-btn" data-command="underline" title="Sublinhado">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 20h12M8 4v12a4 4 0 008 0V4"></path>
                  </svg>
                </button>
                <div class="w-px h-6 bg-gray-300"></div>
                <button type="button" class="editor-btn" data-command="formatBlock" data-value="h2" title="Título H2">H2</button>
                <button type="button" class="editor-btn" data-command="formatBlock" data-value="h3" title="Título H3">H3</button>
                <button type="button" class="editor-btn" data-command="formatBlock" data-value="p" title="Parágrafo">P</button>
                <div class="w-px h-6 bg-gray-300"></div>
                <button type="button" class="editor-btn" data-command="insertUnorderedList" title="Lista">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                  </svg>
                </button>
                <button type="button" class="editor-btn" data-command="createLink" title="Link">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                  </svg>
                </button>
              </div>
              
              <!-- Editor Content -->
              <div
                id="rich-editor"
                contenteditable="true"
                class="min-h-[300px] p-4 focus:outline-none focus:ring-2 focus:ring-blue-500 prose max-w-none"
                style="max-height: 400px; overflow-y: auto;"
              >
                <p>Comece a escrever seu post aqui...</p>
              </div>
            </div>
            <textarea id="post-content" name="content" class="hidden"></textarea>
          </div>
        </form>
      </div>
      
      <!-- Sidebar -->
      <div class="w-80 bg-gray-50 border-l border-gray-200 overflow-y-auto">
        <div class="p-6 space-y-6">
          <!-- Status and Visibility -->
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h4 class="font-medium text-gray-900 mb-3">Publicação</h4>
            <div class="space-y-3">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select id="post-status" name="status" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 text-sm">
                  <option value="Rascunho">Rascunho</option>
                  <option value="Publicado">Publicado</option>
                  <option value="Agendado">Agendado</option>
                </select>
              </div>
              
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Data de Publicação</label>
                <input
                  type="datetime-local"
                  id="post-published-at"
                  name="publishedAt"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 text-sm"
                />
              </div>
              
              <div class="flex items-center">
                <input type="checkbox" id="post-featured" name="featured" class="mr-2">
                <label for="post-featured" class="text-sm text-gray-700">Post em destaque</label>
              </div>
            </div>
          </div>
          
          <!-- Category -->
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h4 class="font-medium text-gray-900 mb-3">Categoria</h4>
            <select id="post-category" name="categoryId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 text-sm" required>
              <option value="">Selecione uma categoria</option>
            </select>
          </div>
          
          <!-- Featured Image -->
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h4 class="font-medium text-gray-900 mb-3">Imagem de Destaque</h4>
            <div class="space-y-3">
              <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-blue-400 transition-colors">
                <input
                  type="file"
                  id="image-upload"
                  accept="image/*"
                  class="hidden"
                />
                <button
                  type="button"
                  id="upload-trigger"
                  class="w-full text-sm text-gray-600 hover:text-blue-600 transition-colors"
                >
                  <svg class="w-8 h-8 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                  </svg>
                  Clique para fazer upload
                </button>
              </div>
              
              <div id="upload-progress" class="hidden">
                <div class="bg-blue-100 rounded-full h-2">
                  <div class="bg-blue-600 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
                </div>
                <p class="text-xs text-gray-600 mt-1">Enviando imagem...</p>
              </div>
              
              <div id="image-preview" class="hidden">
                <img id="preview-img" src="" alt="Preview" class="w-full h-32 object-cover rounded-lg">
                <button type="button" id="remove-image" class="mt-2 text-xs text-red-600 hover:text-red-800">Remover imagem</button>
              </div>
              
              <input
                type="url"
                id="post-image"
                name="image"
                placeholder="Ou cole uma URL de imagem..."
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 text-sm"
              />
            </div>
          </div>
          
          <!-- SEO Settings -->
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <h4 class="font-medium text-gray-900 mb-3">SEO</h4>
            <div class="space-y-3">
              <div>
                <label class="block text-xs text-gray-600 mb-1">Meta Título</label>
                <input
                  type="text"
                  id="post-seo-title"
                  name="seoTitle"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-blue-500"
                  placeholder="Título para SEO..."
                />
                <p class="text-xs text-gray-500 mt-1">Máx. 60 caracteres</p>
              </div>
              
              <div>
                <label class="block text-xs text-gray-600 mb-1">Meta Descrição</label>
                <textarea
                  id="post-seo-description"
                  name="seoDescription"
                  rows="3"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-blue-500"
                  placeholder="Descrição para SEO..."
                ></textarea>
                <p class="text-xs text-gray-500 mt-1">Máx. 160 caracteres</p>
              </div>
              
              <div>
                <label class="block text-xs text-gray-600 mb-1">Palavras-chave</label>
                <input
                  type="text"
                  id="post-seo-keywords"
                  name="seoKeywords"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-blue-500"
                  placeholder="palavra1, palavra2, palavra3"
                />
              </div>
              
              <div>
                <label class="block text-xs text-gray-600 mb-1">Tempo de Leitura</label>
                <input
                  type="text"
                  id="post-read-time"
                  name="readTime"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-blue-500"
                  placeholder="5 min read"
                />
              </div>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="bg-white rounded-lg p-4 shadow-sm">
            <div class="flex flex-col space-y-3">
              <button
                type="submit"
                id="save-post-btn"
                class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 transition-all duration-200 flex items-center justify-center"
              >
                <span id="save-btn-text">Salvar Post</span>
                <svg id="save-btn-loading" class="hidden animate-spin ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
              </button>
              
              <button
                type="button"
                id="cancel-post-btn"
                class="w-full bg-gray-200 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-300 transition-colors"
              >
                Cancelar
              </button>
              
              <button
                type="button"
                id="preview-post-btn"
                class="w-full bg-green-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-green-700 transition-colors text-sm"
              >
                Visualizar
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-confirmation-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl max-w-md w-full p-6 shadow-2xl">
    <div class="text-center">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
        <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Excluir Post</h3>
      <p class="text-sm text-gray-500 mb-6">
        Tem certeza que deseja excluir este post? Esta ação não pode ser desfeita.
      </p>
      <div class="flex space-x-3">
        <button
          id="cancel-delete-btn"
          class="flex-1 bg-gray-200 text-gray-700 py-2 px-4 rounded-lg font-medium hover:bg-gray-300 transition-colors"
        >
          Cancelar
        </button>
        <button
          id="confirm-delete-btn"
          class="flex-1 bg-red-600 text-white py-2 px-4 rounded-lg font-medium hover:bg-red-700 transition-colors"
        >
          Excluir
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .editor-btn {
    @apply p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-200 rounded-md transition-colors;
  }
  
  .editor-btn.active {
    @apply bg-blue-100 text-blue-700;
  }
  
  #rich-editor {
    outline: none;
  }
  
  #rich-editor:focus {
    @apply ring-2 ring-blue-500;
  }
  
  .prose h2 {
    @apply text-xl font-semibold text-gray-900 mt-6 mb-3;
  }
  
  .prose h3 {
    @apply text-lg font-medium text-gray-900 mt-4 mb-2;
  }
  
  .prose p {
    @apply mb-3 text-gray-700;
  }
  
  .prose ul {
    @apply list-disc list-inside mb-3;
  }
  
  .prose a {
    @apply text-blue-600 hover:text-blue-800 underline;
  }
</style>

<script>
  // Rich Text Editor functionality
  document.addEventListener('DOMContentLoaded', () => {
    const editor = document.getElementById('rich-editor');
    const contentTextarea = document.getElementById('post-content');
    const toolbar = document.querySelectorAll('.editor-btn');
    
    // Toolbar functionality
    toolbar.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        const command = btn.dataset.command;
        const value = btn.dataset.value;
        
        if (command === 'createLink') {
          const url = prompt('Digite a URL do link:');
          if (url) {
            document.execCommand(command, false, url);
          }
        } else if (command === 'formatBlock') {
          document.execCommand(command, false, value);
        } else {
          document.execCommand(command, false, null);
        }
        
        editor.focus();
        updateContent();
      });
    });
    
    // Update hidden textarea with editor content
    function updateContent() {
      if (editor && contentTextarea) {
        contentTextarea.value = editor.innerHTML;
      }
    }
    
    // Listen for content changes
    editor?.addEventListener('input', updateContent);
    editor?.addEventListener('paste', () => {
      setTimeout(updateContent, 100);
    });
    
    // Auto-generate slug from title
    const titleInput = document.getElementById('post-title');
    const slugInput = document.getElementById('post-slug');
    
    titleInput?.addEventListener('input', (e) => {
      if (!slugInput.value || slugInput.dataset.autoGenerated === 'true') {
        const slug = e.target.value
          .toLowerCase()
          .normalize('NFD')
          .replace(/[\u0300-\u036f]/g, '')
          .replace(/[^a-z0-9]+/g, '-')
          .replace(/(^-|-$)/g, '');
        slugInput.value = slug;
        slugInput.dataset.autoGenerated = 'true';
      }
    });
    
    slugInput?.addEventListener('input', () => {
      slugInput.dataset.autoGenerated = 'false';
    });
    
    // Character counters for SEO fields
    const seoTitle = document.getElementById('post-seo-title');
    const seoDescription = document.getElementById('post-seo-description');
    
    function updateCharCount(input, maxLength) {
      const current = input.value.length;
      const parent = input.parentElement;
      let counter = parent.querySelector('.char-counter');
      
      if (!counter) {
        counter = document.createElement('p');
        counter.className = 'char-counter text-xs mt-1';
        parent.appendChild(counter);
      }
      
      counter.textContent = `${current}/${maxLength} caracteres`;
      counter.className = `char-counter text-xs mt-1 ${current > maxLength ? 'text-red-500' : 'text-gray-500'}`;
    }
    
    seoTitle?.addEventListener('input', () => updateCharCount(seoTitle, 60));
    seoDescription?.addEventListener('input', () => updateCharCount(seoDescription, 160));
  });
</script>
---
import { getTranslations } from '../i18n/translations';

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const services = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
    </svg>`,
    title: t.services.seo.title,
    description: t.services.seo.description,
    gradient: 'from-primary-500 to-blue-600'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
    </svg>`,
    title: t.services.content.title,
    description: t.services.content.description,
    gradient: 'from-secondary-500 to-teal-600'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>`,
    title: t.services.ai.title,
    description: t.services.ai.description,
    gradient: 'from-purple-500 to-pink-600'
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
    </svg>`,
    title: t.services.analytics.title,
    description: t.services.analytics.description,
    gradient: 'from-green-500 to-emerald-600'
  }
];
---

<section id="services" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-display font-bold text-gray-900 mb-4">
        {t.services.title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {t.services.subtitle}
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 xl:grid-cols-4 gap-8">
      {services.map((service, index) => (
        <div 
          class="group bg-white rounded-2xl p-8 shadow-md hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Icon -->
          <div class={`inline-flex items-center justify-center w-16 h-16 rounded-xl bg-gradient-to-r ${service.gradient} text-white mb-6 group-hover:scale-110 transition-transform duration-300`}>
            <Fragment set:html={service.icon} />
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-display font-semibold text-gray-900 mb-4">
            {service.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {service.description}
          </p>
          
          <!-- Hover Effect -->
          <div class="mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class={`h-1 w-full bg-gradient-to-r ${service.gradient} rounded-full`}></div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- CTA Section -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-primary-600 to-secondary-600 rounded-2xl p-8 text-white">
        <h3 class="text-2xl font-display font-bold mb-4">
          Ready to Transform Your Digital Presence?
        </h3>
        <p class="text-primary-100 mb-6 max-w-2xl mx-auto">
          Let's discuss how I can help your business achieve its digital marketing goals with proven strategies and innovative solutions.
        </p>
        <a 
          href={lang === 'en' ? '/#contact' : `/${lang}/#contact`}
          class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transform hover:-translate-y-1 transition-all duration-300 shadow-lg hover:shadow-xl"
        >
          Start Your Project
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>